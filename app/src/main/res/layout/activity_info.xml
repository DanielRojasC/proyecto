<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity"
    android:background="@drawable/fondo">


    <RelativeLayout
        android:layout_width="321dp"
        android:layout_height="59dp"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="34dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/perfil_default"
            tools:layout_editor_absoluteX="180dp"
            tools:layout_editor_absoluteY="44dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="332dp"
        android:layout_height="172dp"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="105dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@drawable/card_bg">


        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="TextView"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/username"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:text="TextView"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_centerHorizontal="true"
            android:text="TextView"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/telefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_centerHorizontal="true"
            android:text="TextView"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/webside"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/telefono"
            android:layout_alignParentBottom="false"
            android:layout_centerInParent="true"
            android:text="TextView"
            android:padding="5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="334dp"
        android:layout_height="135dp"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="302dp"
        android:background="@drawable/card_bg">


        <TextView
            android:id="@+id/zipcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/city"
            android:layout_centerHorizontal="true"
            android:text="TextView"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/suit"
            android:layout_centerHorizontal="true"
            android:text="TextView"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/suit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/street"
            android:layout_centerHorizontal="true"
            android:text="TextView"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/street"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="TextView"
            android:padding="5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="325dp"
        android:layout_height="145dp"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="456dp"
        android:background="@drawable/card_bg">

        <TextView
            android:id="@+id/bs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/catchPhrase"
            android:layout_centerHorizontal="true"
            android:text="TextView"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/catchPhrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameCompany"
            android:layout_centerHorizontal="true"
            android:text="TextView"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/nameCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="TextView"
            android:padding="5dp"/>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>